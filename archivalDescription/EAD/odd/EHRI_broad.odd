                <rule xmlns="http://purl.oclc.org/dsdl/schematron"
                  context="ead:controlaccess/ead:corpname | ead:controlaccess/ead:famname | ead:controlaccess/ead:persname | ead:controlaccess/ead:subject">
                  <assert xmlns="http://purl.oclc.org/dsdl/schematron" role="COULD"
                    test="if (@authfilenumber) then (@source) else ()">If the access points have an
                    attribute AUTHFILENUMBER, an attribute SOURCE should be present</assert>
                </rule>
              </constraint>
            </constraintSpec>
